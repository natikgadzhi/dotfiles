// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.

{
  "lsp_highlight_debounce": 75,
  "buffer_line_height": "comfortable",
  "buffer_font_weight": 400.0,
  "preview_tabs": {
    "enable_preview_from_file_finder": false
  },
  "tabs": {
    "file_icons": false,
    "git_status": true
  },
  "title_bar": {
    "show_menus": false,
    "show_user_picture": false,
    "show_onboarding_banner": false,
    "show_project_items": true,
    "show_branch_icon": false
  },
  "debugger": {
    "button": false
  },
  "search": {
    "button": false
  },
  "diagnostics": {
    "lsp_pull_diagnostics": {
      "debounce_ms": 50
    },
    "inline": {
      "update_debounce_ms": 1050,
      "enabled": true
    },
    "button": true
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "redact_private_values": false,
  "inlay_hints": {
    "enabled": true
  },
  "ssh_connections": [
    {
      "host": "clownas.local",
      "username": "natikgadzhi",
      "projects": [
        {
          "paths": ["/etc/ssh"]
        },
        {
          "paths": ["/home/natikgadzhi"]
        }
      ]
    }
  ],
  "agent": {
    "inline_assistant_model": {
      "provider": "anthropic",
      "model": "claude-opus-4-5-latest"
    },
    "default_profile": "write",
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "anthropic",
      "model": "claude-opus-4-5-latest"
    }
  },
  "edit_predictions": {
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "theme": {
    "mode": "system",
    "dark": "Flexoki Dark",
    "light": "Gruvbox Dark Hard"
  },
  "icon_theme": {
    "mode": "system",
    "light": "Colored Zed Icons Theme Dark",
    "dark": "Colored Zed Icons Theme Dark"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "base_keymap": "Cursor",

  "project_panel": {
    "button": true,
    "scrollbar": {
      "show": "never"
    }
  },

  "collaboration_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },

  "show_wrap_guides": true,
  "preferred_line_length": 100,
  "vim_mode": true,

  // stock font is honestly pretty cool
  "buffer_font_family": "JetBrains Mono",
  "ui_font_size": 16,
  "buffer_font_size": 16,

  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "selected_symbol": true,
    "diagnostics": "all",
    "axes": {
      "horizontal": false,
      "vertical": true
    }
  },

  "git": {
    "git_gutter": "tracked_files",
    "gutter_debounce": 500
  },

  "terminal": {
    "shell": {
      "program": "/opt/homebrew/bin/fish"
    },
    "font_family": "JetBrainsMono Nerd Font",
    "detect_venv": {
      "on": {
        "directories": ["venv", ".venv"],
        "activate_script": "fish"
      }
    },
    "working_directory": "current_project_directory"
  },

  "file_finder": {
    "modal_max_width": "large"
  },

  // Override formatting on Python using Ruff
  "languages": {
    "Markdown": {
      "format_on_save": "off",
      "soft_wrap": "preferred_line_length"
    },
    "TOML": {
      "format_on_save": "off"
    },
    "Python": {
      "preferred_line_length": 120,
      "tab_size": 2,
      "inlay_hints": {
        "enabled": true
      },
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "bash",
          "arguments": [
            "-c",
            "uv run ruff format check --select=I --fix --stdin-filename {buffer_path} | uv run ruff format --stdin-filename {buffer_path}"
          ]
        }
      }
    }
  }
}
